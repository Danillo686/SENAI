    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <script>
        var nome, idade, dias, idade

        nome = prompt("Qual o seu nome?")
        alert (`Olá ${nome}, posso sabe a sua idade?`)
        idade = Number(prompt(`Digite sua idade aqui ${nome}, por favor`))
        dias = idade * 365
        meses = idade * 12

        alert (`Sua idade é ${idade}, correto, ${nome}? Você viveu ${meses} meses, e ${dias} dias. Parabéns :>`)
    </script>
</body>
</html>

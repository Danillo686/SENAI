            <script> //entradas
                function verificar(){ //BARRA DE PESQUISA
                    let entrada = window.document.getElementById("pesquisa").value
                    
                    if (entrada.toLowerCase() === "perfume"){
                       window.location.href = "perfume.html";
                    }else if (entrada.toLowerCase() === "creme" || entrada.toLowerCase() === "creme corporal" || entrada.toLowerCase() === "cremes" || entrada.toLowerCase() === "cremes corporais"){
                        window.location.href = "perfume.html"
                    }else if (entrada.toLowerCase() === "perfume" || entrada.toLowerCase() === "perfumes" || entrada.toLowerCase() === "perfumes chiques" || entrada.toLowerCase() === "perfumes infatis"){
                        window.local.href = "perfume.html"
                    }else if (entrada.toLowerCase() === "sabonete" || entrada.toLowerCase() === "sabonetes" || entrada.toLowerCase() === "sabonetes corporal" || entrada.toLowerCase() === "sabonete corporal"){
                        window.location.href = "perfume.html"
                    }else if (entrada.toLowerCase() === "batons" || entrada.toLowerCase() === "batom"){
                        window.location.href = "perfume.html"
                    }else if (entrada.toLowerCase() === "água" || entrada.toLowerCase() === "agua" || entrada.toLowerCase() === "água micelar"){
                        window.location.href = "perfume.html"
                    }else if (entrada.toLowerCase() === "deliniador" || entrada.toLowerCase() === "deliniadores" || entrada.toLowerCase() === "deliniado"){
                        window.location.href = "perfume.html"
                    }else if (entrada.toLowerCase() === "esmalte" || entrada.toLowerCase() === "esmaltes" || entrada.toLowerCase() === "esmalt"){
                        window.location.href = "perfume.html"
                    }else if (entrada.toLowerCase() === "gloss" || entrada.toLowerCase() === "glosses" || entrada.toLowerCase() === "glos"){
                        window.location.href = "perfume.html"
                    }else if (entrada.toLowerCase() === "lapis" || entrada.toLowerCase() === "lápis" || entrada.toLowerCase() === "lápis para olho"){
                        window.location.href = "perfume.html"
                    }else if (entrada.toLowerCase() === "limpador facial" || entrada.toLowerCase() === "limpa" || entrada.toLowerCase() === "limpa facial" || entrada.toLowerCase() === "limpador"){
                        window.location.href = "perfume.html"
                    }else if (entrada.toLowerCase() === "mascara" || entrada.toLowerCase() === "máscara" || entrada.toLowerCase() === "mascara para cilios" || entrada.toLowerCase() === "máscara para cilios"){
                        window.location.href = "perfume.html"
                    }else if (entrada.toLowerCase() === "paleta" || entrada.toLowerCase() === "paleta de sombras" || entrada.toLowerCase() === "sombra"){
                        window.location.href = "perfume.html"
                    }else if (entrada.toLowerCase() === "shampoo" || entrada.toLowerCase() === "shampo"){
                        window.location.href = "perfume.html"
                    }
                }

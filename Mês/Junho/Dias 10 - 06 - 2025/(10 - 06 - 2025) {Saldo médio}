<body>
    <script>
        var salario

        salario = Number(prompt("Digite aqui seu salario:  "))

        if (salario >= 0 && salario <= 200){
            alert ("Nenhum crédito")
        }else if (salario >= 201 && salario <= 400){
            alert ("Saldo médio de 20%")
        }else if (salario >= 401 && salario <= 600){
            alert ("Saldo médio de 30%")
        }else if (salario >= 601){
            alert ("Saldo médio de 40%")
        }

    </script>
</body>
</html>

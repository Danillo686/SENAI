<body>
    <script>
        alert ("Você pode digitar 20 números, os negativos serão contados e o resultado apararecerá no final")

        var contador = 0
        
        for (i = 0 ; i <= 20 ; i++){
        var numb = Number(prompt("Escolha"))
             if (numb < 0){
                contador ++
             }
        }

        alert (`Você digitou ${contador} números negativos!`)
    </script>
